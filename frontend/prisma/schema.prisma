datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Batch {
  id             String   @id
  fruitType      String
  receivedDate   DateTime
  initialQuality Float
  currentQuality Float
  status         String
  bestBefore     DateTime
  expectedQuality Float
  
  // Fruit analysis data
  prediction      String
  pHLevel         Float
  ripeness        Float
  defects         Float
  temperature     Float
  humidity        Float
  weight          Float
  size            Json    // Stored as { length: number, width: number }
  sugar           Float
  firmness        Float
  shelfLife       Int
  origin          String
  storageTime     Int
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
} 